<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Bootstrap demo</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>

<style>

  .bg-form-bk{
    min-height: 100vh;
    background-image: url("bg.jpg");
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
 }
 input,textarea,select{
  border-radius: 5px;
  background:rgba(128, 128, 128, 0.591);
 }
 .bookHead{
    color: white;
    font-size: 3rem;
    text-align: center;
    padding: 1rem;
 }
 .form-container{
    background-color: #00000053;
    color: white;
    padding: 3rem;
    font-size: 1.5rem;
    filter: blur(0);
 }
 #bookBtn{
    width: 5rem;;
    height: 2.5rem;
    background-color: rgb(85, 175, 85);
    border: 2px solid black;
    font-size: 1.5rem;
    font-family: 'PT Sans Narrow', sans-serif;
    text-align: center;
 }
 #bookBtn:hover{
    cursor: pointer;
 }
 .footer{
  background-color: rgba(31, 44, 112, 0.64);
  display: flex;
  justify-content: center;
  align-items: center;
  height: 5rem;
 }
 @media screen and (max-width: 781px){ 
  .bookHead{
    font-size: 2rem;
  }
  .form-container{
    font-size: 1rem;
    padding: 1rem;
  }
  #bookBtn{
    font-size: 1rem;
  }
  textarea{
    width:18rem;
  }
 }
</style>

<body>
  {{>navbar}}
  {{!-- <br> --}}
  <!--  -->
  <div class="backg">
    <form method="POST" action="/book" class="bg-form-bk"><br>
      <h1 class="bookHead">Book Your table for a savouring experience</h1><br>
      <div class="form-container">
        <label for="name">Name:</label>
        <input type="text" name="name" /><br /><br />
        <label for="mobile">Mobile Number:</label>
        <input type="number" name="phone" id="mobile" /> <br /><br />
        <label for="date">Date:</label>
        <input type="date" name="date" id="date" /> <br /><br />
        <label for="time-slot">Time slot: </label>
        <select name="slot" id="slot">
          <option>Select an option</option>
          <option id="1" value="9AM-11AM">9AM-11AM</option>
          <option id="2" value="12PM-3PM">12PM-3PM</option>
          <option id="3" value="5PM-7PM">5PM-7PM</option>
          <option id="4" value="8PM-11PM">8PM-11PM</option>
        </select><br /><br />
        <div>Available Seats:<span id="seatCap">0</span></div>
        <br />
        <div>Table for:<input type="number" id="numOfSeats" name="seats" /></div>
        <br />
        <label for="message">Special Message:</label><br />
        <textarea name="messege" id="message" cols="50" rows="4"></textarea><br /><br />
        <button id="bookBtn">Book</button>
      </div>
    </form>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
    crossorigin="anonymous"></script>
</body>

<script>
  const login = document.getElementById('login');
  const logout = document.getElementById('logout');

  const authtoken = document.cookie;

  if (authtoken) {
    login.style.display = "none"
    registeration.style.display = "none";
    logout.style.display = "block"
  } else {
    login.style.display = "block"
    registeration.style.display = "block";
    logout.style.display = "none"
  } 

  var seatCap = document.getElementById("seatCap");
  const slot = document.getElementById('slot');

  slot.addEventListener('change', function(){
    var arr = [20, 100, 34, 5];
        const stringVal = slot.value;
    const match = stringVal.match(/^\d+/);
    var ts = parseInt(match[0],10);

        if (ts == 9) {
      seatCap.innerHTML = arr[0];
    }
    else if (ts == 12) {
      seatCap.innerHTML = arr[1];
    }
    else if (ts == 5) {
      seatCap.innerHTML = arr[2];
    }
    else if (ts == 8) {
      seatCap.innerHTML = arr[3];
    }
  })
</script>

</html>